{
    "manifest_version": 3,
    "name": "Unscroll -  AI Shopping Assistant",
    "version": "1.0",
    "description": "쿠팡 상품 요약을 빠르게 확인할 수 있는 확장 프로그램입니다.",
    "action": {
        "default_popup": "frontend/popup/popup.html",
        "default_icon": "frontend/assets/unscroll_icon.png"
    },
    "side_panel": {
        "default_path": "frontend/sidepanel/sidepanel.html"
    },
    "background": {
        "service_worker": "backend/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.coupang.com/*"
            ],
            "js": [
                "frontend/content/uiController.js",
                "frontend/content/contentScript.js"
            ]
        }
    ],
    "permissions": [
        "sidePanel",
        "scripting",
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "web_accessible_resources": [
  {
    "resources": ["frontend/content/content.js"],
    "matches": ["<all_urls>"]
  }
]
}